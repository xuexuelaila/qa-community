/* 卡片容器 */
.card {
  position: relative;
  background-color: var(--color-surface);
  border-radius: var(--radius-xl);
  padding: 24px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  transition: all var(--transition-base);
  animation: fadeInUp var(--transition-base) ease-out;
  display: flex;
  flex-direction: column;
  height: 100%;
  aspect-ratio: 3 / 4;
  overflow: hidden;
  cursor: pointer;
  border: 1px solid var(--color-border-light);
}

.card:hover {
  box-shadow: 0 8px 20px rgba(26, 188, 156, 0.18);
  transform: translateY(-4px);
  border-color: #1abc9c;
}

/* 分类标签 - 右上角 */
.categoryBadge {
  position: absolute;
  top: 16px;
  right: 16px;
  padding: 4px 12px;
  background: linear-gradient(135deg, #1abc9c 0%, #16a085 100%);
  color: white;
  font-size: 12px;
  font-weight: 600;
  border-radius: 12px;
  box-shadow: 0 2px 6px rgba(26, 188, 156, 0.3);
  z-index: 1;
}

/* 标题区 */
.header {
  margin-bottom: 16px;
  padding-right: 80px;
}

.questionText {
  font-size: 20px;
  font-weight: 700;
  color: #2c3e50;
  line-height: 1.4;
  margin: 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 核心结论高亮区 */
.highlight {
  display: flex;
  align-items: flex-start;
  gap: 8px;
  padding: 12px 16px;
  background: linear-gradient(135deg, #f0fdf9 0%, #e6f9f4 100%);
  border-left: 3px solid #1abc9c;
  border-radius: 8px;
  margin-bottom: 16px;
}

.highlightIcon {
  font-size: 18px;
  flex-shrink: 0;
  margin-top: 2px;
}

.highlightText {
  flex: 1;
  font-size: 15px;
  font-weight: 600;
  color: #16a085;
  line-height: 1.6;
}

/* 答案内容区 */
.answer {
  flex: 1;
  overflow: hidden;
  margin-bottom: 16px;
}

.answerContent {
  font-size: 14px;
  line-height: 1.6;
  color: var(--color-text-primary);
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 8;
  -webkit-box-orient: vertical;
}

/* Markdown样式 */
.answerContent :global(p) {
  margin-bottom: 8px;
}

.answerContent :global(strong) {
  font-weight: 700;
  color: #2c3e50;
}

.answerContent :global(ul),
.answerContent :global(ol) {
  margin: 8px 0;
  padding-left: 20px;
}

.answerContent :global(li) {
  margin-bottom: 4px;
}

.answerContent :global(code) {
  background: #f5f5f5;
  padding: 2px 6px;
  border-radius: 4px;
  font-family: 'JetBrains Mono', monospace;
  font-size: 13px;
}

/* 避坑警告模块 */
.pitfallBox {
  background: linear-gradient(135deg, #fff5f0 0%, #ffe8dc 100%);
  border-left: 3px solid #e74c3c;
  border-radius: 8px;
  padding: 12px 16px;
  margin-bottom: 16px;
}

.pitfallHeader {
  display: flex;
  align-items: center;
  gap: 6px;
  margin-bottom: 8px;
}

.pitfallIcon {
  font-size: 16px;
}

.pitfallTitle {
  font-size: 14px;
  font-weight: 700;
  color: #e74c3c;
}

.pitfallList {
  margin: 0;
  padding-left: 20px;
  list-style: none;
}

.pitfallList li {
  position: relative;
  font-size: 13px;
  line-height: 1.6;
  color: #c0392b;
  margin-bottom: 4px;
  padding-left: 12px;
}

.pitfallList li::before {
  content: '•';
  position: absolute;
  left: 0;
  color: #e74c3c;
  font-weight: bold;
}

/* 底部互动区 */
.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 12px;
  border-top: 1px solid rgba(0, 0, 0, 0.06);
  margin-top: auto;
}

.feedback {
  display: flex;
  gap: 12px;
}

.feedbackButton {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 6px 12px;
  border-radius: 8px;
  font-size: 13px;
  color: var(--color-text-secondary);
  background: transparent;
  border: 1px solid var(--color-border-light);
  transition: all var(--transition-fast);
  cursor: pointer;
}

.feedbackButton:hover {
  background-color: #f0fdf9;
  border-color: #1abc9c;
  color: #1abc9c;
}

.feedbackButton.active {
  background: linear-gradient(135deg, #1abc9c 0%, #16a085 100%);
  border-color: #1abc9c;
  color: white;
}

.footerRight {
  display: flex;
  align-items: center;
  gap: 12px;
}

.date {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

.detailButton {
  font-size: 13px;
  font-weight: 600;
  color: #1abc9c;
  background: transparent;
  border: none;
  cursor: pointer;
  transition: all var(--transition-fast);
  padding: 4px 8px;
  border-radius: 6px;
}

.detailButton:hover {
  background: #f0fdf9;
  color: #16a085;
}

/* 动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
